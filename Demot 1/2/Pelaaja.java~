public class Pelaaja{
  /*Toteuta luokat Pelaaja ja Joukkue. 
   * Pelaajalla tulee olla attribuutit nimi, numero ja pelipaikka
(hyökkääjä, puolustaja tai maalivahti). */
  
  public String name;
  public int number;
  public String position;
  
  public Pelaaja(String name, int number, String pos){
    this.name = name;
    this.number = number;
    switch (pos){
      case "ATT":
        position = "hyökkääjä";
      case "DEF":
        position = "puolustaja";
      case "GL":
        position = "maalivahti";
    }
  }
    public String playerInfo(){
      return (name  +  ", #" + number + ", " + position);
   }
    public int jersey(){
      return number;
    }
}

